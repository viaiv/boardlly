{
  "name": "@tactyo/root",
  "private": true,
  "version": "0.1.0",
  "description": "Workspace do Tactyo com frontend (Vite) e backend (FastAPI)",
  "scripts": {
    "install:web": "npm install --prefix web",
    "dev:web": "npm run dev --prefix web",
    "dev:api": "uvicorn api.main:app --reload --app-dir api",
    "dev": "run-p dev:web dev:api",
    "dev:stack": "docker compose -f infra/docker-compose.yml up",
    "lint": "npm run lint --prefix web",
    "lint:api": "ruff check api",
    "test": "npm run test --prefix web",
    "test:api": "pytest -q",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "format": "prettier --write ."
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "prettier": "^3.4.2"
  }
}
