# Database
TACTYO_DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/tactyo

# Security (use scripts/generate_secrets.py para gerar em produção)
TACTYO_SESSION_SECRET=change-me-in-production
TACTYO_ENCRYPTION_KEY=change-me-in-production

# Application
TACTYO_DEBUG=true
TACTYO_APP_NAME=Tactyo

# Sync Configuration
SYNC_INTERVAL_CRON=*/10 * * * *
DEFAULT_OWNER=
DEFAULT_PROJECT_NUMBER=

# CORS (opcional, separar por vírgula)
# IMPORTANTE: Não use string vazia! Deixe comentado para usar padrão ou defina com valor
# TACTYO_CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# GitHub OAuth (opcional)
# GITHUB_CLIENT_ID=
# GITHUB_CLIENT_SECRET=

# SMTP Configuration (para envio de emails de convite)
# Se não configurado, emails não serão enviados (convites ainda funcionam, mas sem notificação)
# TACTYO_SMTP_HOST=smtp.gmail.com
# TACTYO_SMTP_PORT=587
# TACTYO_SMTP_USER=seu-email@gmail.com
# TACTYO_SMTP_PASSWORD=sua-senha-de-app
# TACTYO_SMTP_FROM_EMAIL=noreply@tactyo.com
# TACTYO_SMTP_FROM_NAME=Tactyo
# TACTYO_SMTP_USE_TLS=true

# Frontend URL (usado nos links dos emails)
TACTYO_FRONTEND_URL=http://localhost:5173
